<%if current_user.username == @user_profile.username%>
<% who = "Your" %>
<h1> These are all your answers</h1>
<%else%>
<% who = @user_profile.username + "'s"%>
<h1> These are all <%=@user_profile.username%>'s answers</h1>
<%end%>

<%@answers.each do |answer|%>
<p id ="question">
<% question = Question.find_by(id: answer.question_id)%>
 <%=question.id%>: <%=question.question%>

<p>
<p id ="answer">
<%=who%> answer: <%=answer.answer%>
<p>
<%end%>

<p id="back"> <%= link_to 'Go Back', current_user %></p>
