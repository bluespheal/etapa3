<h1>Welcome to Kuora!</h1>

<%if logged_in?%>
<h2>You are logged in as <%= current_user.username %></h2>
<%end%>

<%if logged_in?%>

<ul>

<p>
<%= link_to 'Your profile', current_user %>
</p>

<p>
<%= link_to 'Show all users', controller: 'users' %>
</p>

<p>
<%= link_to 'Logout', logout_path, method: 'delete' %>
</p>

</ul>

<%else%>

<ul>

<p>
 <%= link_to 'Login', login_path%>
</p>

<p>
 <%= link_to 'Create new Account', new_user_path %>
</p>

</ul>

<%end%>
