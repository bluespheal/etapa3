<h1>This are all the users</h1>

<p>
 <%= link_to 'Create new Account', new_user_path %>
</p>


<table>
  <tr>
    <th>Username</th>
    <th>E-mail</th>
  </tr>
 
  <% @users.each do |user| %>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.email %></td>
      <td><%= link_to 'Show', user_path(user) %></td>
      <td><%= link_to 'Edit', edit_user_path(user) %></td>    
      <td><%= link_to 'Destroy', user_path(user),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>  
    </tr>
  <% end %>
</table>